             <%= button_to('Aprovar', {action: 'create', controller: :voto, receita_id: @receita.id,categoria_id: b.id, tipo: true}) +
                         button_to('Reprovar', {action: 'create', controller: :voto, receita_id: @receita.id, categoria_id: b.id, tipo: false})%>
          <%end%>
  <% end %>
</p>

