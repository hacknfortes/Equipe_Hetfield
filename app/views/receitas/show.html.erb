<p>
<p>
  <strong>Usuario:</strong>
  <%= @receita.usuario_id %>
</p>

<p>
  <strong>Titulo:</strong>
  <%= @receita.titulo %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @receita.descricao %>
</p>

