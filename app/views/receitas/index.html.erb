<h1>Listing receitas</h1>

<table>
  <thead>
    <tr>
      <th>Cloned from</th>
      <th>Usuario</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Deleted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receitas.each do |receita| %>
      <tr>
        <td><%= receita.cloned_from_id %></td>
        <td><%= receita.usuario_id %></td>
        <td><%= receita.titulo %></td>
        <td><%= receita.descricao %></td>
        <td><%= receita.deleted_at %></td>
        <td><%= link_to 'Show', receita %></td>
        <td><%= link_to 'Edit', edit_receita_path(receita) %></td>
        <td><%= link_to 'Destroy', receita, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

