<h1>Minhas Receitas</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Receita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @receitas.length == 0 %>
      <tr>
        <td colspan="6">Nenhuma receita foi cadastrada. Clique <%= link_to 'aqui', new_receita_path %> para cadastrar.</td>
      </tr>
    <%- else -%>
    <% @receitas.each do |receita| %>
      <tr>
        <td>
          <h3><%= receita.titulo %></h3>
          <%= raw(receita.descricao) %>
        </td>
        <td width="1"><%= link_to 'Visualizar', receita %></td>
        <td width="1"><%= link_to 'Editar', edit_receita_path(receita) %></td>
        <td width="1"><%= link_to 'Apagar', receita, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @receitas %>
<br>

<%= link_to 'New Receita', new_receita_path %>
